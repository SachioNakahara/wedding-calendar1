{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "README.md"
      ],
      "predeploy": ["npm ci"],

      "runtime": "nodejs20"
    }
  ],
  "hosting": {
    "public": "backend/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "github": {
      "workflows": [
        "firebase-hosting-merge.yml",
        "firebase-hosting-pull-request.yml"
      ],
      "predeploy": ["npm ci && npm run build"],
      "postdeploy": []
    }
  }
}
